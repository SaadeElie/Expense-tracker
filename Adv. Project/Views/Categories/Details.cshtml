@model Adv._Project.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @if (Model.UserId != null) // Only show Edit for user-specific categories
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>
</div>
