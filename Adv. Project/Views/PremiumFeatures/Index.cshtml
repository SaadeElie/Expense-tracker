@{
    ViewData["Title"] = "Premium Features";
}

<div id="premium-features" class="container mt-4">
    <div class="text-center">
        <h1 class="display-4 text-primary">Premium Features</h1>
        <p class="lead">Welcome to the premium features dashboard!</p>
    </div>
    <div class="row justify-content-center">
        <!-- Advanced Analytics -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">Advanced Analytics</h5>
                    <p class="card-text">Gain deeper insights into your financial data with advanced analytics.</p>
                    <a asp-action="AdvancedAnalytics" class="btn btn-primary">View Analytics</a>
                </div>
            </div>
        </div>

        <!-- Download Reports -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Download Reports</h5>
                    <p class="card-text">Export your financial data to reports for detailed analysis.</p>
                    <a asp-action="DownloadReport" class="btn btn-success">Download</a>
                </div>
            </div>
        </div>

        <!-- Budget Planning -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning">Budget Planner</h5>
                    <p class="card-text">Set and track your monthly budget to manage expenses effectively.</p>
                    <a asp-action="BudgetPlanner" class="btn btn-warning">Plan Budget</a>
                </div>
            </div>
        </div>
    </div>
</div>
