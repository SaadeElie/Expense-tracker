@model Adv._Project.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-danger">Delete Transaction</h6>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Are you sure you want to delete this?</h5>
        <dl class="row mt-4">
            <dt class="col-sm-3">User ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UserId)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">
                <span class="@(Model.Type == Adv._Project.Models.TransactionType.Expense ? "text-danger" : "text-success")">
                    @Model.Amount.ToString("C")
                </span>
            </dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Type)</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Date)</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category)</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
    </div>
</div>
